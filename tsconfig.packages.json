{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "paths": {
      "lc/*": [
        "packages/*"
      ]
    }
  },
  "include": [
    "packages",
    "packages/**/*.d.ts",
    "node_modules"
  ],
  "exclude": [
    "node_modules"
  ]
}
