{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "lc/*": [
        "../../packages/*"
      ]
    }
  },
  "include": [
    "**/*.d.ts",
    "**/*.vue",
  ]
}
