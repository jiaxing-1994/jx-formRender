{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "node",
      "vite/client"
    ],
    "baseUrl": "./",
    "paths": {
      "lc/*": ["../*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
