{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2015",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "lib": ["ES2015", "DOM.Iterable", "DOM"],
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": [
      "node",
    ],
    "paths": {
      "lc/*": [
        "packages/*"
      ]
    }
  },
  "include": [
    "*.d.ts",
    "*.ts",
    "./packages/types/**/*.d.ts",
    "node_modules"
  ],
  "files": [],
  "exclude": [
    "node_modules"
  ]
}
